{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": ["* * 1 */3 *"],
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":maintainLockFilesWeekly"
  ],
  "recreateWhen": "always",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "lockFileMaintenance"],
      "groupName": "non-breaking"
    }
  ]
}
