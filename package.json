{
  "name": "swarm-app",
  "main": "src/index.js",
  "bin": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "fix": "eslint . --fix && tsc",
    "test": "jest --coverage"
  },
  "dependencies": {
    "ajv": "8.x",
    "dockerode": "4.x",
    "jest-diff": "30.x",
    "js-yaml": "4.x",
    "just-extend": "6.x",
    "nunjucks": "^3.2.4",
    "source-map-support": "0.5.x",
    "traverse": "0.6.x",
    "yargs": "18.x"
  },
  "devDependencies": {
    "@jest/globals": "30.x",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/dockerode": "3.x",
    "@types/js-yaml": "4.x",
    "@types/node": "24.x",
    "@types/nunjucks": "^3.2.6",
    "@types/source-map-support": "0.5.x",
    "@types/traverse": "0.6.x",
    "@typescript-eslint/eslint-plugin": "8.x",
    "@typescript-eslint/parser": "8.x",
    "eslint": "9.x",
    "jest": "30.x",
    "ts-jest": "29.x",
    "typescript": "5.x",
    "typescript-eslint": "^8.46.4"
  },
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/*.test.ts"
    ],
    "coverageReporters": [
      "text-summary",
      "json-summary",
      "lcov"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!src/index.js",
      "!tests/**.*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/firecow/swarm-app.git"
  },
  "author": "Mads Jon Nielsen <madsjon@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/firecow/swarm-app/issues"
  },
  "homepage": "https://github.com/firecow/swarm-app#readme",
  "keywords": [
    "docker",
    "stack",
    "diff",
    "deploy",
    "wait",
    "swarm",
    "validate"
  ]
}
